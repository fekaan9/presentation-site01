<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sunum Değerlendirme</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
            background-color: #f5f5f5;
        }
        input, button, select {
            padding: 10px;
            margin: 10px;
            font-size: 16px;
        }
        .average {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Sunum</h1>

    <label for="name">İsminizi girin:</label>
    <input type="text" id="name" placeholder="Adınız"><br>

    <label for="rating">Sunumu değerlendir (1-5):</label>
    <select id="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br>

    <button onclick="submitRating()">Değerlendir</button>

    <div class="average" id="averageDisplay">Ortalama: -</div>

    <script>
        let ratings = [];

        function submitRating() {
            const name = document.getElementById('name').value.trim();
            const rating = parseInt(document.getElementById('rating').value);

            if(name === "") {
                alert("Lütfen isminizi girin!");
                return;
            }

            ratings.push(rating);

            const sum = ratings.reduce((a, b) => a + b, 0);
            const average = (sum / ratings.length).toFixed(2);

            document.getElementById('averageDisplay').innerText = Ortalama: ${average};
            document.getElementById('name').value = "";
        }
    </script>
</body>
</html>
